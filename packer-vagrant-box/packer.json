{
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/install-vbox-additions.sh",
      "scripts/base.sh",
      "scripts/vagrant.sh",
      "scripts/puppet.sh",
      "scripts/cleanup.sh"
    ]
  }],
  "builders": [{
      "name": "puppet5",
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> append initrd=initrd.img inst.text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 81920,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_url": "http://distro.ibiblio.org/centos/7/isos/x86_64/CentOS-7-x86_64-DVD-1804.iso",
      "iso_checksum_type": "sha1",
      "iso_checksum": "3a7cb1f2041fee7c3c99c2afc7f1bf60ac671c73",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "shutdown -P now",
      "guest_additions_mode": "attach",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "480"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "compression_level": 1,
    "keep_input_artifact": true
  }]
}
